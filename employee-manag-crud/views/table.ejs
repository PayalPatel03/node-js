<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Employee Table</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
      crossorigin="anonymous"
    />
    <style>
      body {
        background: linear-gradient(to right, #2c5364, #203a43, #0f2027);
        color: #f0f0f0;
      }
      .table-container {
        background-color: #1c1c1c;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.15);
      }
    </style>
  </head>
  <body>
    <%- include("./navbar") %>

    <div class="container py-5">
      <h2 class="text-center mb-4">Employee Table</h2>
      <div class="table-container">
        <table class="table table-dark table-hover text-center align-middle">
          <thead>
            <tr class="table-primary text-dark">
              <th>#</th>
              <th>Employee ID</th>
              <th>Name</th>
              <th>Department</th>
              <th>Salary</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% employees.map((employee, idx) => { %>
              <tr>
                <td><%= idx + 1 %></td>
                <td><%= employee.employee_id %></td>
                <td><%= employee.employee_name %></td>
                <td><%= employee.dep %></td>
                <td><%= employee.emp_salary %></td>
                <td>
                  <a href="/employee/edit/?id=<%= employee.id %>" class="btn btn-warning btn-sm me-1">
                    <i class="fa-solid fa-pen"></i>
                  </a>
                  <a href="/employee/delete/<%= employee.id %>" class="btn btn-danger btn-sm">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                  <a href="/employee/tasks/<%= employee.id %>" class="btn btn-info btn-sm">
                    <i class="fa-solid fa-tasks"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
