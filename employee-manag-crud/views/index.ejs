    <style>
      body {
        background: #0f2027;
        background: linear-gradient(to right, #2c5364, #203a43, #0f2027);
        color: #f0f0f0;
        font-family: "Segoe UI", sans-serif;
      }
      h2 {
        text-shadow: 0 0 10px #00f0ff;
      }
      .form-card {
        background: #1c1c1c;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
      }
      .form-control {
        background-color: #2d2d2d;
        border: none;
        color: white;
      }
      .form-control:focus {
        border: 2px solid #00e0ff;
        background-color: #2d2d2d;
        box-shadow: 0 0 10px #00f0ff;
        color: white;
      }
      .btn-glow {
        background-color: #00e0ff;
        color: #000;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 0 10px #00e0ff, 0 0 20px #00e0ff;
      }
      .btn-glow:hover {
        background-color: #00ffff;
        color: #000;
        transform: scale(1.05);
        box-shadow: 0 0 20px #00f0ff, 0 0 30px #00f0ff;
      }
      .table-dark th,
      .table-dark td {
        vertical-align: middle;
      }
      .btn-danger,
      .btn-warning {
        transition: 0.3s;
      }
      .btn-danger:hover {
        background-color: #ff4d4d;
        box-shadow: 0 0 15px #ff4d4d;
      }
      .btn-warning:hover {
        background-color: #ffc107;
        box-shadow: 0 0 15px #ffc107;
      }
    </style>
  </head>
  <body>
    <%- include("./navbar") %>

    <div class="container py-5">
      <div class="row mb-5">
        <div class="col-md-6 mx-auto">
          <h2 class="text-center">Employee Manager</h2>
          <div class="form-card mt-4">
            <form method="post" action="/login">
              <div class="mb-3">
                <label for="emp_name" class="form-label">Employee Name</label>
                <input
                  name="employee_name"
                  type="text"
                  class="form-control"
                  id="emp_name"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="department" class="form-label">Department</label>
                <input
                  name="dep"
                  type="text"
                  class="form-control"
                  id="department"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="salary" class="form-label">Salary</label>
                <input
                  name="emp_salary"
                  type="number"
                  class="form-control"
                  id="salary"
                  required
                />
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-glow">Add Employee</button>
              </div>
            </form>
          </div>
        </div>
      </div>

